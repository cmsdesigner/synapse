<Addin id        = "Flickr"
	   namespace = "Synapse"
	   name      = "Flickr"
	   author    = "Eric Butler"
	   copyright = "GPLv3"
	   version   = "0.1">

	<Dependencies>
		<Addin id="UI" version="0.1" />
	</Dependencies>

	<Extension path="/Synapse/UI/AvatarProviders">
		<AvatarProvider class="Synapse.Addins.Flickr.FlickrAvatarProvider" />
	</Extension>
	
	<Extension path="/Synapse/UI/Chat/MessageDisplayFormatters">
		<MessageDisplayFormatter class="Synapse.Addins.Flickr.FlickrMessageDisplayFormatter" />
	</Extension>
</Addin>