<Addin id        = "Twitter"
	   namespace = "Synapse"
	   name      = "Twitter"
	   author    = "Eric Butler"
	   copyright = "GPLv3"
	   version   = "0.1">

	<Dependencies>
		<Addin id="Services" version="0.1" />
		<Addin id="Xmpp" version="0.1" />
		<Addin id="UI" version="0.1" />
		<Addin id="QtClient" version="0.1" />
	</Dependencies>

	<Extension path="/Synapse/ServiceManager/Service">
		<Service class="Synapse.Addins.Twitter.TwitterService" />
	</Extension>

	<Extension path="/Synapse/Xmpp/ActivityFeed/ShoutHandlers">
		<ShoutHandler class="Synapse.Addins.Twitter.TwitterShoutHandler" />
	</Extension>
	
	<Extension path="/Synapse/QtClient/AddinPreferencesDialogs">
		<Dialog class="Synapse.Addins.Twitter.TwitterAddinPreferencesDialog" />
	</Extension>

	<Extension path="/Synapse/UI/ResourceProviders">
		<ResourceProvider id="twitter"/>
	</Extension>
	
	<Extension path="/Synapse/QtClient/Roster/FriendActions">
		<Action id="Synapse.Addins.Twitter.ViewOnTwitterAction" />
	</Extension>
</Addin>
