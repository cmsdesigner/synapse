<Addin id        = "FireEagle"
	   namespace = "Synapse"
	   name      = "FireEagle"
	   author    = "Eric Butler"
	   copyright = "GPLv3"
	   version   = "0.1">

	<Dependencies>
		<Addin id="Services" version="0.1" />
		<Addin id="Xmpp" version="0.1" />
		<Addin id="UI" version="0.1" />
		<Addin id="QtClient" version="0.1" />
	</Dependencies>

	<Extension path="/Synapse/QtClient/AddinPreferencesDialogs">
		<Dialog class="Synapse.Addins.FireEagle.FireEagleAddinPreferencesDialog" />
	</Extension>
	
	<Extension path="/Synapse/ServiceManager/Service">
		<Service class="Synapse.Addins.FireEagle.FireEagleService" />
	</Extension>
	
	<Extension path="/Synapse/UI/ResourceProviders">
		<ResourceProvider id="fireeagle"/>
	</Extension>
	
	<Extension path="/Synapse/QtClient/WebIdentityConfigurators">
		<WebIdentityConfigurator class="Synapse.Addins.FireEagle.FireEagleWebIdentityConfigurator"
		                         name="Fire Eagle"
		                         description="Share your Fire Eagle location with your Synapse friends."
		                         icon="resource:/fireeagle/fireeagle-48.png" />
	</Extension>
</Addin>
