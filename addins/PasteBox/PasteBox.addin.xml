<Addin id        = "PasteBox"
	   namespace = "Synapse"
	   name      = "PasteBox"
	   author    = "Eric Butler"
	   copyright = "GPLv3"
	   version   = "0.1">

	<Dependencies>
		<Addin id="UI" version="0.1" />
	</Dependencies>

	<ExtensionPoint path="/Synapse/PasteBox/PasteFormatters">
		<Description>Formatters for message text</Description>
	</ExtensionPoint>

	<Extension path="/Synapse/PasteBox/PasteFormatters">
		<PasteFormat name="C++"        type="text/x-c++src"          class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="C#"         type="text/x-csharp"          class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="CSS"        type="text/css"               class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Pascal"     type="text/x-pascal"          class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Java"       type="text/x-java"            class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="JavaScript" type="application/javascript" class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="PHP"        type="application/x-php"      class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Python"     type="text/x-python"          class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Ruby"       type="application/x-ruby"     class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="SQL"        type="text/x-sql"             class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="VB"         type="text/x-vb"              class="Synapse.PasteBox.CodePasteFormatter" />
		<PasteFormat name="XML/HTML"   type="application/xml"        class="Synapse.PasteBox.CodePasteFormatter" />
	</Extension>

	<Extension path="/Synapse/UI/ActionHandlers">
		<ActionHandler class="Synapse.PasteBox.ActionHandler" />
	</Extension>

	<Extension path="/Synapse/UI/Actions">
		<Action id="Synapse.PasteBox.Actions.ShowPasteBox"
			  icon="editpaste"
			_label="Paste Lots of Text" />
	</Extension>
	
	<Extension path="/Synapse/UI/ChatWindow/FormattingToolbar">
		<SeparatorItem />
		<ActionItem id="Synapse.PasteBox.Actions.ShowPasteBox" />
	</Extension>

	<Extension path="/Synapse/UI/ResourceProviders">
		<ResourceProvider id="pastebox"/>
	</Extension>

	<Extension path="/Synapse/UI/ConversationHtmlHeaders">
		<ConversationHeader name="ConversationHeader.html" />
	</Extension>
</Addin>