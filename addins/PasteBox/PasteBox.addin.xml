<Addin id        = "PasteBox"
	   namespace = "Synapse"
	   name      = "PasteBox"
	   author    = "Eric Butler"
	   copyright = "GPLv3"
	   version   = "0.1">

	<Dependencies>
		<Addin id="UI" version="0.1" />
	</Dependencies>

	<ExtensionPoint path="/Synapse/PasteBox/PasteFormatters">
		<Description>Formatters for message text</Description>
		<ExtensionNode name="PasteFormat" type="Synapse.Addins.PasteBox.PasteFormatCodon" />
	</ExtensionPoint>

	<Extension path="/Synapse/PasteBox/PasteFormatters">
		<PasteFormat name="C++"        mimeType="text/x-c++src"          class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="C#"         mimeType="text/x-csharp"          class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="CSS"        mimeType="text/css"               class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Pascal"     mimeType="text/x-pascal"          class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Java"       mimeType="text/x-java"            class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="JavaScript" mimeType="application/javascript" class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="PHP"        mimeType="application/x-php"      class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Python"     mimeType="text/x-python"          class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="Ruby"       mimeType="application/x-ruby"     class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="SQL"        mimeType="text/x-sql"             class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="VB"         mimeType="text/x-vb"              class="Synapse.Addins.PasteBox.CodePasteFormatter" />
		<PasteFormat name="XML/HTML"   mimeType="application/xml"        class="Synapse.Addins.PasteBox.CodePasteFormatter" />
	</Extension>

	<Extension path="/Synapse/UI/ActionHandlers">
		<ActionHandler class="Synapse.Addins.PasteBox.ActionHandler" />
	</Extension>

	<Extension path="/Synapse/UI/Actions">
		<Action id="Synapse.Addins.PasteBox.Actions.ShowPasteBox"
			  icon="editpaste"
			_label="Paste Lots of Text" />
	</Extension>
	
	<Extension path="/Synapse/UI/ChatWindow/FormattingToolbar">
		<SeparatorItem />
		<ActionItem id="Synapse.Addins.PasteBox.Actions.ShowPasteBox" />
	</Extension>

	<Extension path="/Synapse/UI/ResourceProviders">
		<ResourceProvider id="pastebox"/>
	</Extension>
</Addin>