<Addin id        = "PasteBox"
	   namespace = "Synapse"
	   name      = "PasteBox"
	   author    = "Eric Butler"
	   copyright = "GPLv3"
	   version   = "0.1">

	<Dependencies>
		<Addin id="Services" version="0.1" />
		<Addin id="UI" version="0.1" />
		<Addin id="QtClient" version="0.1" />
	</Dependencies>

	<Extension path="/Synapse/ServiceManager/Service">
		<Service class="Synapse.Addins.PasteBox.PasteBoxService" />
	</Extension>
	
	<Extension path="/Synapse/QtClient/ChatWindow/InsertActions">
		<Separator />
		<Action class="Synapse.Addins.PasteBox.ShowPasteBoxAction" />
	</Extension>

	<Extension path="/Synapse/UI/ResourceProviders">
		<ResourceProvider id="pastebox"/>
	</Extension>

	<Extension path="/Synapse/UI/ConversationHtmlHeaders">
		<ConversationHeader name="ConversationHeader.html" />
	</Extension>

	<Extension path="/Synapse/UI/Chat/MessageDisplayFormatters">
		<MessageDisplayFormatter class="Synapse.Addins.PasteBox.CodeMessageDisplayFormatter" />
	</Extension>
</Addin>