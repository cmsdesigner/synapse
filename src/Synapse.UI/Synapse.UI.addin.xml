<Addin id     = "UI"
	namespace = "Synapse"
	name      = "Synapse UI"
	author    = "Eric Butler"
	copyright = "GPLv3"
	url       = "http://synapse.im/"
	isroot    = "true"
	version   = "0.1">

	<ExtensionNodeSet id="Synapse.UI.Actions.ItemSet">
		<ExtensionNode name="SeparatorItem" type="Synapse.UI.Actions.ExtensionNodes.SeparatorItemCodon" />
		<ExtensionNode name="ActionItem" type="Synapse.UI.Actions.ExtensionNodes.ActionItemCodon" />
	</ExtensionNodeSet>

	<ExtensionPoint path="/Synapse/UI/ActionHandlers">
		<Descriptions>Handlers for UI actions</Descriptions>
		<ExtensionNode name="ActionHandler" />
	</ExtensionPoint>

	<ExtensionPoint path="/Synapse/UI/Actions">
		<Description>User interface actions</Description>
		<ExtensionNode name="Action" type="Synapse.UI.Actions.ExtensionNodes.ActionCodon" />
	</ExtensionPoint>

	<ExtensionPoint path="/Synapse/UI/AddinPreferences">
		<ExtensionNode name="AddinPreferencesFactory" />
	</ExtensionPoint>

	<ExtensionPoint path="/Synapse/UI/ChatWindow/FormattingToolbar">
		<Description>Message format toolbar in conversation windows</Description>
		<ExtensionNodeSet id="Synapse.UI.Actions.ItemSet" />
	</ExtensionPoint>

	<ExtensionNodeSet id="Synapse.UI.ResourceProviderSet">
		<ExtensionNode name="ResourceProvider" type="Synapse.UI.ResourceProviderCodon" />
	</ExtensionNodeSet>

	<ExtensionPoint path="/Synapse/UI/ResourceProviders">
		<Description>Resource providers</Description>
		<ExtensionNodeSet id="Synapse.UI.ResourceProviderSet" />
	</ExtensionPoint>

	<ExtensionPoint path="/Synapse/UI/AvatarProviders">
		<ExtensionNode name="AvatarProvider" />
	</ExtensionPoint>

	<ExtensionPoint path="/Synapse/UI/ConversationHtmlHeaders">
		<ExtensionNode name="ConversationHeader" type="Synapse.UI.ResourceCodon" />
	</ExtensionPoint>
</Addin>
